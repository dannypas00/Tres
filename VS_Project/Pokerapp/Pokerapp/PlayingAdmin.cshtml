                                        <th>Round</th>
                                        <th>Small Blind</th>
                                        <th>Big Blind</th>
                                    </tr>
                                    @{db = Database.OpenConnectionString(connectionString, provider);
                                        foreach (var row in db.Query("SELECT ValueSB, ValueBB, ID FROM Blinds WHERE Room_Code = @0 ORDER BY ID ASC", roomCode))
